                <span>Graph Bug</span>
            </NavLink>

            <NavLink href="/analytics" class="topnav-link" activeClass="is-active" Match="NavLinkMatch.Prefix">
                <MudIcon Icon="@Icons.Material.Filled.AccountTree" Class="nav-ic" />
                <span>Memory Tree</span>
            </NavLink>

            <NavLink href="/kidmanagement" class="topnav-link" activeClass="is-active" Match="NavLinkMatch.Prefix">
                <MudIcon Icon="@Icons.Material.Filled.Groups" Class="nav-ic" />
                <span>Kid Panel</span>
            </NavLink>

        </div>
    </MudContainer>
