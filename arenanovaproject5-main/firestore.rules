rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow any authenticated user to read user profiles for dashboard access
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
                     (request.auth.uid == userId ||
                      request.resource.data.uid == request.auth.uid);
    }

    match /users/{userId}/children/{childId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /`children progress`/{childUid} {
      allow read: if request.auth != null && resource.data.parentuid == request.auth.uid;
    }

    match /childaccounts/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Catch-all for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}