@inherits LayoutComponentBase

<div class="app-shell">
    <aside class="sidebar">
        <div class="brand">
            <div class="app-name">lomolabs</div>
            <div class="app-state">parental monitor</div>
            <div class="app-info">learning progress dashboard</div>
        </div>

        <ArenaNovaProject5.Web.Components.Layout.NavMenu />
    </aside>

    <div class="main">
        <header class="topbar">
            <ArenaNovaProject5.Web.Components.Layout.Childselector />

            <div class="topbar-right">
                <button class="btn btn-secondary" type="button">logout</button>
            </div>
        </header>

        <main class="content">
            <article class="content-inner">
                @Body
            </article>
        </main>
    </div>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
</div>
