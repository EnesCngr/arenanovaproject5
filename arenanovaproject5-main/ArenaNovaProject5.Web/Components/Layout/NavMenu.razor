            </NavLink>

            <NavLink href="/progress" class="topnav-link" activeClass="is-active" Match="NavLinkMatch.Prefix">
                <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Class="nav-ic" />
                <span>Progress</span>
            </NavLink>

            <NavLink href="/analytics" class="topnav-link" activeClass="is-active" Match="NavLinkMatch.Prefix">
                <MudIcon Icon="@Icons.Material.Filled.Analytics" Class="nav-ic" />
                <span>Analytics</span>
            </NavLink>

            <NavLink href="/controls" class="topnav-link" activeClass="is-active" Match="NavLinkMatch.Prefix">
                <MudIcon Icon="@Icons.Material.Filled.Settings" Class="nav-ic" />
                <span>Controls</span>
            </NavLink>

            <NavLink href="/activity" class="topnav-link" activeClass="is-active" Match="NavLinkMatch.Prefix">
